@model List<Contacto>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
  <div class="card-header">
    Lista Contacto
  </div>
  <div class="card-body">
    <a asp-action="Guardar" asp-controller="Contactos" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nuevo</a>
    <hr />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Telefono</th>
                <th>Correo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Telefono</td>
                        <td>@item.Correo</td>
                        <td>
                             <a asp-action="Editar" asp-controller="Contactos" class="btn btn-warning btn-sm" asp-route-IdContacto="@item.IdContacto" >Editar</a>
                             <a asp-action="Eliminar" asp-controller="Contactos" class="btn btn-danger btn-sm" asp-route-IdContacto="@item.IdContacto" >Eliminar</a>
                        </td>
                    </tr>

                }
        </tbody>
    </table>

  </div>
</div>

